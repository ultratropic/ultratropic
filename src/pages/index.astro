---
// Full-screen background video homepage
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>Ultratropic</title>
  </head>
  <body>
    <div class="container">
      <video
        id="video"
        muted
        loop
        playsinline
        preload="auto"
      >
        <source src="/videos/splash.mp4" type="video/mp4" />
      </video>
    </div>

    <script>
      const video = document.getElementById('video');
      let hasPlayed = false;

      // Try autoplay
      video.play().catch(() => {
        hasPlayed = false;
      });

      video.addEventListener('play', () => {
        hasPlayed = true;
      });

      // Handle click
      document.body.addEventListener('click', () => {
        if (hasPlayed) {
          window.location.href = '/about';
        } else {
          video.play().then(() => {
            hasPlayed = true;
          });
        }
      });
    </script>

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html, body {
        width: 100%;
        height: 100%;
        overflow: hidden;
        background: #000;
      }

      .container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
        background: #000;
      }

      video {
        position: absolute;
        top: 50%;
        left: 50%;
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        transform: translate(-50%, -50%);
        object-fit: cover;
      }
    </style>
  </body>
</html>
