---
// Full-screen background video homepage
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, viewport-fit=cover" />
    <title>Homepage</title>
  </head>
  <body>
    <a href="/about" class="video-container">
      <video id="bgVideo" autoplay muted loop playsinline class="background-video">
        <source src="/videos/splash.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </a>

    <script>
      // Force video play on iOS
      const video = document.getElementById('bgVideo');

      if (video && video instanceof HTMLVideoElement) {
        // Attempt to play immediately
        video.play().catch(() => {
          // If autoplay fails, try again on user interaction
          document.addEventListener('touchstart', function() {
            if (video instanceof HTMLVideoElement) {
              video.play();
            }
          }, { once: true });
        });

        // Also try when page becomes visible
        document.addEventListener('visibilitychange', function() {
          if (!document.hidden && video instanceof HTMLVideoElement) {
            video.play();
          }
        });
      }
    </script>

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        overflow: hidden;
        width: 100vw;
        height: 100vh;
        height: 100dvh; /* Dynamic viewport height for mobile */
        position: fixed;
        -webkit-overflow-scrolling: touch;
      }

      .video-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: block;
        cursor: pointer;
        z-index: 1;
      }

      .background-video {
        position: absolute;
        top: 50%;
        left: 50%;
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        transform: translate(-50%, -50%);
        object-fit: cover;
      }
    </style>
  </body>
</html>
