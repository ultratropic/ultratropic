---
// Full-screen background video homepage
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, viewport-fit=cover" />
    <title>Homepage</title>
  </head>
  <body>
    <a href="/about" class="video-container">
      <video
        id="bgVideo"
        autoplay
        muted
        loop
        playsinline
        preload="auto"
        class="background-video"
      >
        <source src="/videos/splash.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </a>

    <script is:inline>
      (function() {
        const video = document.getElementById('bgVideo');

        if (!video) return;

        // Remove any existing event listeners
        const playVideo = function() {
          video.muted = true;
          video.play().catch(function(error) {
            console.log('Video autoplay prevented:', error);
          });
        };

        // Try to play when video is loaded
        video.addEventListener('loadeddata', playVideo, { once: true });

        // Try to play on any user interaction
        const interactions = ['touchstart', 'touchend', 'click'];
        interactions.forEach(function(event) {
          document.addEventListener(event, playVideo, { once: true, passive: true });
        });

        // Try to play immediately if video is already loaded
        if (video.readyState >= 2) {
          playVideo();
        }
      })();
    </script>

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        overflow: hidden;
        width: 100vw;
        height: 100vh;
        height: 100dvh; /* Dynamic viewport height for mobile */
        position: fixed;
        -webkit-overflow-scrolling: touch;
      }

      .video-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: block;
        cursor: pointer;
        z-index: 1;
      }

      .background-video {
        position: absolute;
        top: 50%;
        left: 50%;
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        transform: translate(-50%, -50%);
        object-fit: cover;
      }
    </style>
  </body>
</html>
