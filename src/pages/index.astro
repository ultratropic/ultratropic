---
// Full-screen background video homepage
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>Ultratropic</title>
  </head>
  <body>
    <header class="site-header">
      <div class="logo">
        <a href="/"><img src="/logo.png" alt="Ultratropic" /></a>
      </div>
      <nav>
        <a href="/work">Work</a>
        <a href="/about">Info</a>
      </nav>
    </header>

    <div class="container">
      <video
        id="video"
        autoplay
        muted
        loop
        playsinline
        preload="auto"
        class="landscape-video"
      >
        <source src="/videos/splash.mp4" type="video/mp4" />
      </video>
      <video
        id="video-portrait"
        autoplay
        muted
        loop
        playsinline
        preload="auto"
        class="portrait-video"
      >
        <source src="/videos/splash-portrait.mp4" type="video/mp4" />
      </video>
    </div>

    <script>
      const videoLandscape = document.getElementById('video');
      const videoPortrait = document.getElementById('video-portrait');
      let isPlaying = false;

      // Get the currently visible video based on orientation
      const getActiveVideo = () => {
        const isPortrait = window.matchMedia('(orientation: portrait)').matches;
        return isPortrait ? videoPortrait : videoLandscape;
      };

      // Attempt to play the visible video
      const attemptPlay = () => {
        const activeVideo = getActiveVideo();
        const playPromise = activeVideo.play();
        if (playPromise !== undefined) {
          playPromise.then(() => {
            isPlaying = true;
          }).catch(() => {
            isPlaying = false;
          });
        }
      };

      // Track play state for both videos
      [videoLandscape, videoPortrait].forEach(video => {
        video.addEventListener('loadeddata', attemptPlay);
        video.addEventListener('canplay', attemptPlay);
        video.addEventListener('play', () => { isPlaying = true; });
        video.addEventListener('pause', () => { isPlaying = false; });
      });

      // Initial play attempt
      attemptPlay();

      // Handle orientation changes
      window.matchMedia('(orientation: portrait)').addEventListener('change', () => {
        attemptPlay();
      });

      // Handle click - navigate to work page if video is playing, otherwise try to play
      document.body.addEventListener('click', () => {
        if (isPlaying) {
          window.location.href = '/work';
        } else {
          attemptPlay();
        }
      });
    </script>

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html, body {
        width: 100vw;
        height: 100vh;
        overflow: hidden;
        background: #000;
        margin: 0;
        padding: 0;
      }

      .container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        cursor: pointer;
        background: #000;
      }

      video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
      }

      /* Show/hide videos based on orientation */
      .landscape-video {
        display: block;
      }

      .portrait-video {
        display: none;
      }

      @media (orientation: portrait) {
        .landscape-video {
          display: none;
        }

        .portrait-video {
          display: block;
        }
      }

      /* Header styles */
      .site-header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 10;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 2rem;
      }

      .site-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0.4) 0%, transparent 100%);
        pointer-events: none;
      }

      .site-header a {
        color: #fff;
        text-decoration: none;
        position: relative;
        transition: opacity 0.2s;
      }

      .site-header a:hover {
        opacity: 0.7;
      }

      .logo img {
        height: 16.5px;
        width: auto;
        display: block;
      }

      nav {
        display: flex;
        gap: 2rem;
      }

      nav a {
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        font-weight: 300;
        font-size: 0.95rem;
        letter-spacing: 0.5px;
      }

      @media (max-width: 768px) {
        .site-header {
          padding: 1rem 1.5rem;
        }

        .logo img {
          height: 15.5px;
        }

        nav {
          gap: 1.5rem;
        }

        nav a {
          font-size: 0.85rem;
        }
      }
    </style>
  </body>
</html>
