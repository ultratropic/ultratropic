---
import BaseLayout from '../../layouts/BaseLayout.astro';
---
<BaseLayout title="Steve Madden x Walmart | Ultratropic">
  <div class="project-container">
    <video
      autoplay
      muted
      loop
      playsinline
      preload="auto"
    >
      <source src="/projects/steve_madden-bts/sm-bts-landscape.mp4" type="video/mp4" />
    </video>
  </div>

  <script>
    const video = document.querySelector('video');

    if (video) {
      const attemptPlay = () => {
        const playPromise = video.play();
        if (playPromise !== undefined) {
          playPromise.catch(() => {
            // Autoplay was prevented
          });
        }
      };

      video.addEventListener('canplay', attemptPlay);
      attemptPlay();
    }
  </script>

  <style>
    .project-container {
      width: 100%;
    }

    video {
      width: 100%;
      height: auto;
      display: block;
    }
  </style>
</BaseLayout>
